{
  "name": "algo-lens",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/blackphoenix42/AlgoLens.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "changeset": "changeset",
    "release:version": "changeset version",
    "release:publish": "changeset publish",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "test": "playwright test --reporter=dot",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "pwsh -NoProfile -Command \"$env:PWDEBUG='1'; playwright test\"",
    "e2e:report": "playwright show-report",
    "test:e2e:dev": "cross-env PW_BASE_URL=http://127.0.0.1:5173 playwright test",
    "test:a11y": "pa11y-ci e2e/pa11.json",
    "test:percy": "percy exec -- playwright test",
    "analyze:bundle": "node e2e/analyze.mjs --dir=dist --out=analysis --budget-js=250kb --budget-total=600kb --fail-on-threshold",
    "lhci:server": "http-server ./dist -p 4173 -s",
    "lhci:collect": "lhci collect --config=lhci/lighthouserc.json",
    "lhci:assert": "lhci assert --config=lhci/lighthouserc.json",
    "lhci:upload": "lhci upload --config=lhci/lighthouserc.json",
    "lhci": "npm run build && lhci autorun --config=lhci/lighthouserc.json"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@sentry/react": "10.8.0",
    "@sentry/replay": "^7.120.4",
    "gif-encoder-2": "^1.0.5",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.22",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.2",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@lhci/cli": "0.15.1",
    "@playwright/test": "1.55.0",
    "@sentry/vite-plugin": "4.2.0",
    "@tailwindcss/postcss": "4.1.12",
    "@tailwindcss/vite": "4.1.12",
    "@types/node": "24.3.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "2.2.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.2.0",
    "http-server": "14.1.1",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.5.4",
    "typescript-eslint": "8.41.0",
    "vite": "^7.1.3"
  }
}
